<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:weightSum="1"
    android:background="@drawable/shadow_1910">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.11"
        android:background="#eeeeee">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/no_smoking"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brandon has resisted a craving! Congratulate them!"
            android:id="@+id/description"
            android:textSize="24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img"
            android:textColor="#222222"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_vertical"
        android:background="#ffffff">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Likes"
            android:id="@+id/likes"
            android:layout_weight="0.08"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#6ca0dd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Dislikes"
            android:id="@+id/dislikes"
            android:layout_weight="0.06"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#cc5463" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-10-16 9:26pm  "
            android:id="@+id/time"
            android:layout_weight="0.84"
            android:textColor="#222222"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:layout_gravity="center_vertical|right"
            android:textAlignment="textEnd" />
    </LinearLayout>

</LinearLayout>