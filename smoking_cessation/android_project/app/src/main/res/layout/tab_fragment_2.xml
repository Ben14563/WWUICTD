<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollIndicators="bottom">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="false"
        android:background="#bdd094">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.72"
                android:id="@+id/textFieldHolder"
                android:weightSum="1">

                <!--android:inputType="text"-->
                    <!--android:maxLine="1"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Select Ideal Quit Date"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_horizontal" />

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datePicker"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Please list your top 3 motivations."
                        android:id="@+id/textView8"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textColorHighlight="#ffffff" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/motivationBox"
                        android:layout_alignBottom="@+id/motivationButton"
                        android:layout_toRightOf="@+id/motivationButton"
                        android:background="#f0f0f0"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/motivationBox2"
                        android:layout_alignBottom="@+id/motivationButton"
                        android:layout_toRightOf="@+id/motivationButton"
                        android:background="#f0f0f0"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/motivationBox3"
                        android:layout_alignBottom="@+id/motivationButton"
                        android:layout_toRightOf="@+id/motivationButton"
                        android:background="#f0f0f0"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add to list"
                        android:id="@+id/motivationButton"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="clearButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Swipe Left"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:autoText="false"
        android:textSize="40dp"
        android:layout_marginBottom="149dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>