<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kasingj.smokecessation2.SignUp"
    tools:showIn="@layout/activity_sign_up"
    android:background="#bdd094">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpUserInput"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Enter Username"
                android:textAlignment="center"
                android:singleLine="true"
                android:background="#f0f0f0"
                android:layout_margin="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpEmailInput"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/signUpUserInput"
                android:layout_centerHorizontal="true"
                android:hint="Enter Email"
                android:textAlignment="center"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:background="#f0f0f0"
                android:layout_margin="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpPassInput"
                android:hint="Enter Password"
                android:textAlignment="center"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_below="@+id/signUpEmailInput"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="25dp"
                android:background="#f0f0f0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpPassConfirm"
                android:hint="Confirm Password"
                android:textAlignment="center"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_below="@+id/signUpPassInput"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="25dp"
                android:background="#f0f0f0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpCigsPerDay"
                android:hint="Cigs Per Day"
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:singleLine="true"
                android:layout_marginTop="50dp"
                android:layout_margin="25dp"
                android:background="#f0f0f0"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpPricePerPack"
                android:hint="Cost Per Pack"
                android:layout_margin="25dp"
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:singleLine="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="#f0f0f0"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/signUpNumYearsSmoked"
                android:hint="Number of years smoking"
                android:layout_margin="25dp"
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:singleLine="true"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:background="#f0f0f0"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/signUpNextButton"
                android:onClick="goToMain"
                android:layout_below="@+id/signUpPassConfirm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_weight="0.20"
                android:layout_marginLeft="240dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_margin="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
