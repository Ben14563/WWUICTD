<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kasingj.smokecessation2.Dashboard"
    tools:showIn="@layout/activity_dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Dashboard"
            android:id="@+id/dashButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Friends"
            android:id="@+id/friendsButton"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dashButton"
            android:layout_toEndOf="@+id/dashButton"
            android:onClick="goToFriends" />

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Stats"
            android:id="@+id/statsButton"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/friendsButton"
            android:layout_toEndOf="@+id/friendsButton"
            android:onClick="goToStatistics"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="510dp"
            android:id="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/dashButton"
            android:scrollbars="vertical"
            android:paddingBottom="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical">

                <Button
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/button1"
                android:gravity="left|center_vertical"
                android:text="Alvin has resisted a craving on 2-23-1016 at 4:59pm!"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button2"
                    android:gravity="left|center_vertical"
                    android:text="James has resisted a craving on 2-20-1016 at 5:12pm!"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button3"
                    android:gravity="left|center_vertical"
                    android:text="Alvin has resisted a craving on 2-20-1016 at 10:11am!"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button4"
                    android:gravity="left|center_vertical"
                    android:text="Alvin has smoked a cigarette on 2-19-1016 at 11:20am."/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button5"
                    android:gravity="left|center_vertical"
                    android:text="James has resisted a craving on 2-19-1016 at 12:59pm!"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button6"
                    android:gravity="left|center_vertical"
                    android:text="James has smoked a cigarette on 2-18-2016 at 10:00am."/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button7"
                    android:gravity="left|center_vertical"
                    android:text="Alvin has resisted a craving on 2-17-1016 at 3:30pm!"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button8"
                    android:gravity="left|center_vertical"
                    android:text="Alvin has smoked a cigarette on 2-17-2016 at 12:00am."/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/button9"
                    android:gravity="left|center_vertical"
                    android:text="James has smoked a cigarette on 2-16-2016 at 10:00pm."/>

            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="I&apos;m Craving"
            android:id="@+id/craveButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="200dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Resisted Craving"
            android:id="@+id/resistButton"
            android:layout_alignBottom="@+id/craveButton"
            android:layout_toRightOf="@+id/craveButton"
            android:layout_toEndOf="@+id/craveButton" />

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Smoked"
            android:id="@+id/smokedButton"
            android:layout_alignBottom="@+id/resistButton"
            android:layout_alignRight="@+id/statsButton"
            android:layout_alignEnd="@+id/statsButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current\nStreak:"
            android:id="@+id/curStreakText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cigarettes\nNot Smoked:"
            android:id="@+id/notSmokedText"
            android:textSize="32sp"
            android:layout_above="@+id/resistButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Money\nSaved:"
            android:id="@+id/moneySavedText"
            android:textSize="32sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/lifeGainText"
            android:layout_alignStart="@+id/lifeGainText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Life\nRegained:"
            android:id="@+id/lifeGainText"
            android:textSize="32sp"
            android:layout_marginLeft="111dp"
            android:layout_marginStart="111dp"
            android:layout_above="@+id/resistButton"
            android:layout_alignLeft="@+id/resistButton"
            android:layout_alignStart="@+id/resistButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5 Days"
            android:id="@+id/textView2"
            android:textSize="25sp"
            android:paddingBottom="20dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/notSmokedText"
            android:layout_toEndOf="@+id/notSmokedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="25"
            android:id="@+id/textView3"
            android:textSize="25sp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/notSmokedText"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$189.95"
            android:id="@+id/textView4"
            android:textSize="25sp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/moneySavedText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="279 min"
            android:id="@+id/textView5"
            android:textSize="25sp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/lifeGainText"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

    </RelativeLayout>
</RelativeLayout>
